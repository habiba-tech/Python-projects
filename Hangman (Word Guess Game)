import random

words = ["python", "programming", "hangman", "developer"]
word = random.choice(words)
guessed = ["_"] * len(word)
attempts = 6

while attempts > 0 and "_" in guessed:
    print("Word:", " ".join(guessed), f"Attempts left: {attempts}")
    letter = input("Guess a letter: ").lower()

    if letter in word:
        for i in range(len(word)):
            if word[i] == letter:
                guessed[i] = letter
    else:
        attempts -= 1

print("You Win!" if "_" not in guessed else f"You Lose! Word was {word}")
